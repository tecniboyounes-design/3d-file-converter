{
  "name": "3d-converter-server",
  "version": "1.0.0",
  "description": "3D File Converter Server - Fastify + TypeScript",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "fastify": "^4.26.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/multipart": "^8.1.0",
    "@fastify/static": "^7.0.1",
    "fs-extra": "^11.2.0",
    "p-limit": "^3.1.0",
    "pino-pretty": "^10.3.1"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@types/node": "^20.11.5",
    "@types/fs-extra": "^11.0.4",
    "ts-node-dev": "^2.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
